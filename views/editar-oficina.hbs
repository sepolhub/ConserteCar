{{! views/editar-oficina.hbs }}
<main class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h3>Editar Perfil da Oficina</h3>
                    </div>
                    <div class="card-body p-4">
                        <div id="edit-message"></div>
                        <form id="form-editar-oficina">
                            <div class="row">
                                <div class="col-12"><h5 class="mt-2">Dados Principais</h5><hr></div>
                                <div class="col-md-6 mb-3">
                                    <label for="nome" class="form-label">Nome da Oficina</label>
                                    <input type="text" class="form-control" name="nome" value="{{oficina.nome}}" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="cnpj" class="form-label">CNPJ</label>
                                    <input type="text" class="form-control" name="cnpj" value="{{oficina.cnpj}}" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="telefone" class="form-label">Telefone de Contato</label>
                                    <input type="text" class="form-control" name="telefone" value="{{oficina.telefone}}" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email de Contato</label>
                                    <input type="email" class="form-control" name="email" value="{{oficina.email}}" required>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="nome_responsavel" class="form-label">Nome do Responsável</label>
                                    <input type="text" class="form-control" name="nome_responsavel" value="{{oficina.nome_responsavel}}" required>
                                </div>

                                <div class="col-12"><h5 class="mt-4">Endereço</h5><hr></div>
                                <div class="col-md-4 mb-3">
                                    <label for="cep" class="form-label">CEP</label>
                                    <input type="text" class="form-control" id="cep" name="cep" value="{{oficina.cep}}" required>
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label for="logradouro" class="form-label">Rua / Logradouro</label>
                                    <input type="text" class="form-control" id="logradouro" name="logradouro" value="{{oficina.logradouro}}" required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="numero" class="form-label">Número</label>
                                    <input type="text" class="form-control" id="numero" name="numero" value="{{oficina.numero}}" required>
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label for="complemento" class="form-label">Complemento (Opcional)</label>
                                    <input type="text" class="form-control" id="complemento" name="complemento" value="{{oficina.complemento}}">
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="bairro" class="form-label">Bairro</label>
                                    <input type="text" class="form-control" id="bairro" name="bairro" value="{{oficina.bairro}}" required>
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label for="cidade" class="form-label">Cidade</label>
                                    <input type="text" class="form-control" id="cidade" name="cidade" value="{{oficina.cidade}}" required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="estado" class="form-label">Estado (UF)</label>
                                    <input type="text" class="form-control" id="estado" name="estado" value="{{oficina.estado}}" placeholder="SP" maxlength="2" required>
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">Horário de Funcionamento</label>
                                    <div class="p-3 border rounded-3 bg-light" id="secao-horarios-edicao">
                                        </div>
                                </div>
                                
                                <div class="col-md-12 mb-3">
                                    <label for="website" class="form-label">Website ou Rede Social (Opcional)</label>
                                    <input type="text" class="form-control" name="website" value="{{oficina.website}}">
                                </div>
                                
                                <div class="col-md-12 mb-3">
                                    <label class="form-label fw-bold">Principais Especialidades</label>
                                    <div class="p-3 border rounded-3 bg-light" id="secao-especialidades-edicao">
                                        </div>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label for="descricao" class="form-label">Descrição da Oficina</label>
                                    <textarea class="form-control" id="descricao" name="descricao" rows="4" placeholder="Conte um pouco sobre a história e os diferenciais da sua oficina...">{{oficina.descricao}}</textarea>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label fw-bold">Formas de Pagamento Aceites</label>
                                    <div class="p-3 border rounded-3 bg-light" id="secao-pagamentos-edicao">
                                        </div>
                                </div>

                            </div>
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/painel" class="btn btn-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    const oficinaData = {{{json oficina}}};
</script>