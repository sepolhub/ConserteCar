<main class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h3>Editar Perfil da Oficina</h3>
                    </div>
                    <div class="card-body p-4">
                        
                        <div id="edit-message"></div>

                        <form id="form-editar-oficina">
                            <div class="mb-3">
                                <label for="nome" class="form-label">Nome da Oficina</label>
                                <input type="text" class="form-control" id="nome" name="nome" value="{{oficina.nome}}" required>
                            </div>
                            <div class="mb-3">
                                <label for="endereco" class="form-label">Endereço</label>
                                <input type="text" class="form-control" id="endereco" name="endereco" value="{{oficina.endereco}}" required>
                            </div>
                            
                            <!-- Futuramente, podemos adicionar campos para lat, lon, imagem, etc. -->

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/painel" class="btn btn-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
